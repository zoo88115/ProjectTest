<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zoo88115.projecttest.AddFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="名稱："
        android:id="@+id/aa"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addName"
        android:layout_alignTop="@+id/aa"
        android:layout_centerHorizontal="true"
        android:hint="輸入姓名" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="大頭照："
        android:id="@+id/bb"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/addName"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/addIcon"
        android:background="#13000000"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/bb"
        android:layout_toEndOf="@+id/bb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇照片"
        android:id="@+id/button3"
        android:layout_below="@+id/addIcon"
        android:layout_alignStart="@+id/addName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍攝照片"
        android:id="@+id/button5"
        android:onClick="takePicture"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儲存資料"
        android:id="@+id/button6"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addIcon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋轉"
        android:id="@+id/rotateButton"
        android:layout_alignTop="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:background="#13000000"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/rotateButton"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="測試儲存"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignEnd="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="測試擷取"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentStart="true" />

</RelativeLayout>
